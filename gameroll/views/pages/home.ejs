<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<div class="col"><%- include ('../partials/message') %></div>

<main>
  <div class="container">
    <div class="py-4" style="max-width: 800px;">

      <div class="card text-light mb-3" >
        <h3 class="card-header gameHeader">Game Title: <%= results.data[0].name %></h3>
        <img src="<%= results.data[0].screenshots[0].url %>" class="img-fluid rounded mx-auto" alt="..." width="300">
        <div class="card-body gameBody">
          <!-- Game description here: -->
          <p>Game Stats:</p>
          <% if(results.data[0].genres != null){ %>
            <p>Genre: <%= results.data[0].genres[0].name %></p>
          <% }%>
          <p>Summary: <%= results.data[0].summary %></p>
          <% if(results.data[0].release_dates != null){ %>
          <p>Release Date: <%= results.data[0].release_dates[0].human %></p>
          <% }%>
          <% if(results.data[0].platforms != null){ %>
            <p>Platform: <%= results.data[0].platforms[0].name %></p>
          <% }%>
          <% if(results.data[0].url != null){ %>
            <p>View on IGDB:</p>
            <a href="<%=results.data[0].url %>" type="link"><%= results.data[0].url %></a>
          <% }%>
          <br>
          <br>
        </div>
        <div class="card-body">
          
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <form action="/home" method="GET"><button type="submit" class="btn btn-primary btn-lg">New Game >>></button></form>
        <form action="/saveGame" method="POST">
          <button type="submit" class="btn btn-danger btn-lg">Save Game</button>
          <input type="hidden" name="game_name" value= <%= results.data[0].name %>>
          <input type="hidden" name="genre" value= <%= results.data[0].name %>>
          <input type="hidden" name="game_id" value= <%= results.data[0].name%>>
        </form>
        
      </div>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>