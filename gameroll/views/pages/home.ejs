<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<div class="col"><%- include ('../partials/message') %></div>

<main>
  <div class="container">
    <!-- THE REST OF YOUR HTML CODE GOES HERE -->
    <!-- <h4 style="color:red;">Home page</h4> -->
    <!-- <h2> testing if the page will work</h2> -->
    <div class="py-4">

      <div class="card text-dark bg-light mb-3" style="max-width: 800px;">
        <h3 class="card-header">Game Title: <%= results.data[0].name %></h3>
        <img src="<%= results.data[0].screenshots[0].url %>" class="img-thumbnail" alt="..." width="300">
        <div class="card-body">
          <!-- Game description here: -->
          <p>Game Stats:</p>
          <% if(results.data[0].genres != null){ %>
            <p>Genre: <%= results.data[0].genres[0].name %></p>
          <% }%>
          <p>Summary: <%= results.data[0].summary %></p>
          <% if(results.data[0].release_dates != null){ %>
          <p>Release Date: <%= results.data[0].release_dates[0].human %></p>
          <% }%>
          <% if(results.data[0].platforms != null){ %>
            <p>Platform: <%= results.data[0].platforms[0].name %></p>
          <% }%>
      
          <br> <!-- Better way of doing this? -->
          <br>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <form action="/saveGame" method="POST">
          <button type="button" class="btn btn-danger btn-lg">Save Game</button>
          <input type="hidden" />
        </form>
        <form action="/newGame" method="GET"><button type="submit" class="btn btn-primary btn-lg">Next Game >>></button></form>
        
      </div>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>