<%- include ('../partials/header') %> <%- include ('../partials/menu') %>

<main>
    <div class="container">
        <form action="/login" method="POST">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Email</label>
                    <input type="text" name="email" id="form2Example1" placeholder="Email" class="form-control" />
                    </div>
                
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example2">Password</label>
                    <input type="text" name="password" id="form2Example2" placeholder="Password" class="form-control" />
                </div>
            
                <!-- Submit button -->
                <input type="submit" class="btn btn-primary btn-block mb-4"></input>

                <p>Don't have an account? <a href="/register">Register</a></p>

        </form>
    </div>
</main>

